{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist/public",
        "installCommand": "pnpm install --no-frozen-lockfile --force"
      }
    },
    {
      "src": "api/trpc.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/trpc/(.*)", "destination": "/api/trpc.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
