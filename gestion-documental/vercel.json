{
  "version": 2,
  "installCommand": "pnpm install --no-frozen-lockfile",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    {
      "src": "api/trpc.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/trpc/(.*)",
      "destination": "/api/trpc.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
